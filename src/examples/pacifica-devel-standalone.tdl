  <file name="/tmp/dbcreate.sh" type="raw">#!/usr/bin/expect -f
set force_conservative 0
if {$force_conservative} {
        set send_slow {1 .1}
        proc send {ignore arg} {
                sleep .1
                exp_send -s -- \$arg
        }
}
set timeout -1
spawn /usr/lib/myemsl/dbcreate.sh -r
match_max 100000
expect eof
