cat > /var/lib/pacifica/uploader/config/MA==.json &lt;&lt;ENOF
{
	"Rules": [
		{
			"Name": "Instrument 1",
			"Paths": [
				"/srv/pacifica-testupload"
			],
			"StaticMetadata": [],
			"ExcludePatterns": [],
			"RenamePatterns": [],
			"MetadataPattern": [
